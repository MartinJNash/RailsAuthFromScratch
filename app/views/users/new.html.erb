<h1>Sign Up</h1>

  <%= form_for @user do |f| %>
    
  <div>  
    <%= f.label :email, "Email" %>
    <%= f.text_field :email %>
  </div>

  <div>
    <%= f.label :password, "Password" %>
    <%= f.password_field :password %>
  </div>

  <%= f.submit "Create", :disable_with => 'Creating...' %>


<% end %>
